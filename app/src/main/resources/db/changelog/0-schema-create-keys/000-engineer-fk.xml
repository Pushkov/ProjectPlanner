                                 constraintName="FK_ENGINEER_DEPARTMENT"
                                 referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 validate="true"/>
    </changeSet>

